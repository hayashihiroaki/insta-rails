
<div class="tabs">
  <ul>
    <li>
      <%= link_to '写真投稿', new_photo_path %>
    </li>
    <% if user_signed_in? %>
      <li>ようこそ</li>
      <li><%= link_to current_user.email, user_path(current_user.id) %></li>
      <li>さん</li>
    <% end %>
    <li>
      <%= link_to 'Logout', destroy_user_session_path, method: :delete %>
    </li>
  </ul>
</div>


<% @feeds.each do |photo| %>
  <div class="card mb-4">
    <div class="card-image">
      <figure class="image">
        <%= link_to [photo] do %>
          <%= image_tag photo.image.variant(resize: '500x500') %>
        <% end %>
      </figure>
    </div>
    <div class="card-content">
      <div>
        <%= link_to photo.user.email, [photo.user] %>
      </div>
      <div>
        <%= photo.caption %>
      </div>
    </div>
  </div>
<% end %>